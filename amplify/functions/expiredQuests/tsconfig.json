{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowArbitraryExtensions": true,
    "resolveJsonModule": true,

    "outDir": "./dist",
    "rootDir": "./src",

    // prevents TS from emitting anything except files in "src"
    "isolatedModules": false
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "../../../data"]
}
