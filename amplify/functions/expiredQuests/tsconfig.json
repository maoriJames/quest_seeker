{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "./dist",
    "rootDir": ".",           // <-- important (NOT ./src)

    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false
  },
  "include": ["handler.ts"],
  "exclude": ["node_modules"]
}
